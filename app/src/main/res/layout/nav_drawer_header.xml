<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/header_padding"
    android:theme="@style/AppTheme">

    <!-- This contains profile picture in navigation drawer -->
    <ImageView
        android:id="@+id/header_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/header_profile_pic_text"
        app:srcCompat="@mipmap/ic_profile_img" />

    <!-- Profile name and maybe some other crucial information here -->
    <LinearLayout
        android:id="@+id/header_profile_name_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            app:srcCompat="@drawable/f_emblem_blue" />

        <TextView
            android:id="@+id/membership_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="Membership level" />

        <TextView
            android:id="@+id/nav_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/fab_margin"
            android:text="@string/header_profile_name"
            android:textColor="@color/nordicBlue"
            android:textSize="18sp" />

        <!--    <TextView
            android:id="@+id/nav_profile_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/header_padding"
            android:paddingTop="@dimen/header_padding"
            android:text="@string/header_profile_nickname" />  -->
    </LinearLayout>

</LinearLayout>