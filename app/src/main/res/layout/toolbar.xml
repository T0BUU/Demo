<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical">

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="@drawable/divider_horizontal"
                android:padding="@dimen/toolbar_divider_margin_pos"
                android:layout_gravity="start|center_vertical"/>

            <ImageButton
                android:id="@+id/finnair_logo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/f_emblem_blue"
                android:layout_gravity="center"
                android:contentDescription="@string/toolbar_image_description"
                android:layout_marginStart="@dimen/toolbar_divider_margin_pos"
                android:layout_marginEnd="@dimen/toolbar_divider_margin_pos"/>

        </LinearLayout>

        <!-- Map and partner buttons inside this linearlayout-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:divider="@drawable/divider_horizontal"
            android:dividerPadding="@dimen/toolbar_divider_margin_pos"
            android:showDividers="middle"
            android:layout_marginEnd="@dimen/toolbar_margin">

            <Button
                android:id="@+id/toolbar_map_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/toolbar_text_size"
                android:textColor="?attr/colorAccent"
                android:text="@string/toolbar_map_text"
                android:checked="true"
                android:background="?attr/colorPrimary"
                android:layout_marginEnd="@dimen/toolbar_divider_margin_pos"/>

            <Button
                android:id="@+id/toolbar_partners_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/toolbar_text_size"
                android:textColor="?attr/colorAccent"
                android:text="@string/toolbar_list_text"
                android:checked="false"
                android:background="?attr/colorPrimary"/>

      <!--      <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/toolbar_map_text"
                android:textSize="@dimen/toolbar_text_size"
                android:textColor="?attr/colorAccent"
                android:layout_marginEnd="@dimen/toolbar_divider_margin"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/toolbar_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/toolbar_list_text"
                android:textSize="@dimen/toolbar_text_size"
                android:textColor="?attr/colorAccent"
                android:layout_marginStart="@dimen/toolbar_divider_margin"
                android:gravity="center_vertical"/>  -->

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>

