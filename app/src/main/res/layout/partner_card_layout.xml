<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plane_info_table"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/card_border"
    android:fadingEdge="horizontal|vertical"
    android:gravity="fill_horizontal"
    android:maxHeight="180dp"
    android:minHeight="180dp"
    android:padding="7dp">

    <TableRow android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/partner_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/finnair_a350_economy_class_cabin_general_view_cruise_111" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingBottom="5dp"
            android:text="Name"
            android:textColor="#787878"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/field_of_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field of Business"
            android:textAlignment="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/visiting_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visiting Address"
            android:textAlignment="center" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/company_description"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="3dp"
            android:paddingTop="15dp"
            android:text="Company description" />

    </TableRow>

</TableLayout>