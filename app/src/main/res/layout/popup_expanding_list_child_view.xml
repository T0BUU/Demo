<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/expanding_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/nordicBlue"
        android:textSize="20sp"
        android:layout_marginStart="20dp"/>

    <RelativeLayout
        android:id="@+id/popup_expanding_child_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/popup_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/nordicBlue"
            android:layout_marginStart="20dp"/>

        <ImageButton
            android:id="@+id/popup_locate_partner_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_locate_button"
            android:contentDescription="@string/locate_button_description"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>

</LinearLayout>
