<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <!-- This is contains profile pic, name, etc. -->

    <!-- Here is all other stuff in navigation drawer, for example points/cards and login button -->

    <LinearLayout
        android:id="@+id/challenges_basis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false"
        android:background="@drawable/challenge_item_background"
        android:orientation="vertical"
        android:visibility="visible">


        <include
            layout="@layout/nav_drawer_header_challenges"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Buttons on the bottom; settings and login -->
            <LinearLayout
                android:id="@+id/challenge_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/active_challenge_1"
                    layout="@layout/challenge_list_item" />

                <include
                    android:id="@+id/active_challenge_2"
                    layout="@layout/challenge_list_item" />

                <include
                    android:id="@+id/active_challenge_3"
                    layout="@layout/challenge_list_item" />

                <include
                    android:id="@+id/active_challenge_4"
                    layout="@layout/challenge_list_item" />

                <include
                    android:id="@+id/active_challenge_5"
                    layout="@layout/challenge_list_item" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="?attr/colorAccent">

                <ImageButton
                    android:id="@+id/challenge_list_button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:contentDescription="@string/drawer_settings_button_text"
                    app:srcCompat="@drawable/ic_close_button_blue_8dp" />

                <TextView
                    android:id="@+id/challenge_list_back_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center"
                    android:text="Go Back"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_basis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/challenge_item_background"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            layout="@layout/nav_drawer_header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/drawer_points_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_item_height"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/drawer_item_icon_size"
                    android:layout_height="@dimen/drawer_item_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/header_padding"
                    android:background="@drawable/ic_money_logo"
                    android:backgroundTint="@color/gold"
                    android:contentDescription="@string/drawer_points_image_description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/header_padding"
                    android:text="@string/drawer_points_text"
                    android:textColor="@color/nordicBlue"
                    android:textSize="36sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_item_height"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/drawer_points_item"
                android:layout_marginTop="13dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/planes_collected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="You have collected ??? planes" />

                <TextView
                    android:id="@+id/partners_collected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="You have collected ??? partners" />

                <Button
                    android:id="@+id/button_cards"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="onCardButtonClick"
                    android:text="go to collection" />

            </LinearLayout>

            <!-- Buttons on the bottom; settings and login -->

            <Button
                android:id="@+id/challenges_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="23dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="View Active Challenges" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="?attr/colorAccent">

                <ImageButton
                    android:id="@+id/button_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:contentDescription="@string/drawer_settings_button_text"
                    app:srcCompat="@drawable/ic_settings_blue_36dp" />

                <Button
                    android:id="@+id/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:background="@drawable/header_background"
                    android:text="Login" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>